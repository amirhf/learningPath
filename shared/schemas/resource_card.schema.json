{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResourceCard",
  "type": "object",
  "properties": {
    "resource_id": {"type": "string"},
    "title": {"type": "string"},
    "url": {"type": "string", "format": "uri"},
    "why": {"type": "string"},
    "est_minutes": {"type": "integer"},
    "skills": {"type": "array", "items": {"type": "string"}}
  },
  "required": ["resource_id", "title", "url"]
}
