{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuizItem",
  "type": "object",
  "properties": {
    "type": {"type": "string", "enum": ["mcq", "short"]},
    "question": {"type": "string"},
    "options": {"type": "array", "items": {"type": "string"}},
    "answer": {"type": "string"},
    "grounding": {
      "type": "object",
      "properties": {
        "resource_id": {"type": "string"},
        "span": {"type": "string"}
      },
      "required": ["resource_id", "span"]
    }
  },
  "required": ["type", "question", "answer", "grounding"]
}
